<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
  crossorigin="anonymous"
/>

<link rel="stylesheet" href="/css/viewstyle.css">
<div style="background-image: url('/images/passportbg.jpg')">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#!">User Management System</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page"></a>
        </li>
      </ul>

      <form class="d-flex" method="POST" action="/dashboard" novalidate>
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          name="search"
          aria-label="Search"
        />
        <button class="btn btn-outline-light" type="submit">Search</button>
      </form>

    </div>
  </div>
</nav>

<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/Dashboard">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">View User</li>
    </ol>
  </nav>

  <div class="view-user p-5">
    {{#each rows}}
      <div class="row mb-5">
        <div class="col text-center">
          <img
            src="/images/default.svg"
            alt="logo"
            class="logo"
            style="height: 100px; width: 100px"
          />
        </div>
      </div>
      <div class="row mb-5">
        <div class="col text-center">
          <h1>{{this.first_name}} {{this.last_name}}</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">{{this.first_name}}</th>
                <td>{{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
              </tr>
            </tbody>
          </table>
        </div>

          <div class="col-6">
            <div class="card">
              <div class="card-header">
                Comments
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0" style="height: 200px;">
                  <p>{{this.comments}}</p>
                </blockquote>
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="card">
              <div class="card-header">
                Status
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0" style="height: 200px;">
                  <div class="alert alert-primary" role="alert">
                    {{this.status}}
                  </div>
                </blockquote>
              </div>
            </div>
          </div>

      </div>
    {{/each}}
  </div>
</div>
</div>