<link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.materialdesignicons.com/4.8.95/css/materialdesignicons.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="css/formstyle.css">

<main id="body" style="background-image: url('images/passportbg.jpg');" class="d-flex align-items-center min-vh-100 py-3 py-md-0">
  <div class="container">
    <nav class="sticky-top d-flex justify-content-center" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li><img src="images/national-emblem.svg" alt="logo" class="logo" /></li>
        <li class="breadcrumb-item">User Management System</li>
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Register-Admininstrator</li>
    </nav>
    <div class="card login-card">
      <div class="row no-gutters">
        <div class="col-md-5">
          <img src="images/passportbg.jpg" alt="login" class="login-card-img" />
        </div>
        <div class="col-md-7">
          <div class="card-body">
            <div class="brand-wrapper">
              <h4><img src="images/national-emblem.svg" alt="logo" class="logo" />User Management System</h4>
            </div>
            <p class="login-card-description">Signup to create your admin account</p>

            {{#if message}}

            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <strong>{{message}}</strong>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            {{/if}}

            <form class="needs-validation" action="/signup" method="POST" novalidate>
              <div class="form-group">
                <label for="firstname" class="sr-only">Admin Name</label>
                <input type="text" name="admin" id="firstname" class="form-control" placeholder="Admin username"
                  required />
              </div>
              <div class="form-group">
                <label for="email" class="sr-only">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required />
              </div>
              <div class="form-group mb-4">
                <label for="password" class="sr-only">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="***********"
                  required />
              </div>
              <div class="form-group mb-4">
                <label for="confirmpassword" class="sr-only">Confirm password</label>
                <input type="password" name="confirmpassword" id="confirmpassword" class="form-control"
                  placeholder="Confirm Password" required />
              </div>
              <button name="login" id="login" class="btn btn-block login-btn mb-4" type="submit"
                value="Create Account">Create Account</button>
            </form>
            <p class="login-card-footer-text">Have an account?
              <a href="/login" class="text-reset">Login here</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>